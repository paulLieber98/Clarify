{
  "manifest_version": 3,
  "name": "Clarify",
  "version": "1.0",
  "description": "Chat with AI about any webpage, get summaries, and navigate to specific content",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "clarify-logo2.png",
    "48": "clarify-logo2.png",
    "128": "clarify-logo2.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "clarify-logo2.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 