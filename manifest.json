{
  "manifest_version": 3,
  "name": "Clarify",
  "version": "1.4",
  "description": "Chat with AI about any webpage, get summaries, and navigate to specific content",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "clarifyfinal.png",
    "48": "clarifyfinal.png",
    "128": "clarifyfinal.png"
  },
  "action": {
    "default_title": "Clarify",
    "default_icon": "clarifyfinal.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pdf.js", "pdf.worker.js", "content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [{
    "resources": ["pdf.worker.js"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "<all_urls>"
  ]
}
